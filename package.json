{
	"name": "@e280/scute",
	"version": "0.0.0-0",
	"description": "buildy bundly static site generator",
	"license": "MIT",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"type": "module",
	"main": "x/index.js",
	"files": [
		"x",
		"s"
	],
	"bin": {
		"scute": "./x/scute/cli.js",
		"octo": "./x/octo/cli.js"
	},
	"scripts": {
		"build": "run-s _clean _links _tsc _scute",
		"watch": "npm run build -s && node ./x/octo/cli.js 'node ./x/scute/cli.js -vw' 'npm run _tscw'",
		"_scute": "node ./x/scute/cli.js -v",
		"_clean": "rm -rf x && mkdir x",
		"_links": "ln -s \"$(realpath s/index.html)\" x/index.html && ln -s \"$(realpath node_modules)\" x/node_modules",
		"_tsc": "tsc",
		"_tscw": "tsc -w",
		"start": "exit 0",
		"test": "exit 0"
	},
	"dependencies": {
		"@benev/argv": "^0.3.11",
		"@e280/sten": "^0.0.0-5",
		"@e280/stz": "^0.0.0-28",
		"braces": "^3.0.3",
		"chokidar": "^4.0.3",
		"esbuild": "^0.25.6",
		"globby": "^14.1.0",
		"minimatch": "^10.0.3",
		"shell-quote": "^1.8.3",
		"zx": "^8.6.2"
	},
	"devDependencies": {
		"@types/braces": "^3.0.5",
		"@types/node": "^24.0.12",
		"@types/shell-quote": "^1.7.5",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.8.3"
	},
	"keywords": [
		"static site generator",
		"ssg"
	],
	"homepage": "https://github.com/e280/scute#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/e280/scute.git"
	},
	"bugs": {
		"url": "https://github.com/e280/scute/issues"
	}
}
