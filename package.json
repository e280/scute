{
	"name": "@e280/scute",
	"version": "0.2.1",
	"description": "buildy bundly static site generator",
	"license": "MIT",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"type": "module",
	"main": "./x/index.js",
	"exports": {
		".": "./x/index.js"
	},
	"files": [
		"x",
		"s"
	],
	"bin": {
		"scute": "./x/scute/cli.js",
		"octo": "./x/octo/cli.js"
	},
	"scripts": {
		"build": "rm -rf x && mkdir x && ln -s '$(realpath assets)' x/assets && ln -s '$(realpath node_modules)' x/node_modules && tsc",
		"scute": "node ./x/scute/cli.js -v",
		"help": "node ./x/scute/cli.js --help",
		"dev": "node --watch x/tests.test.js & tsc -w & http-server x & wait",
		"test": "node x/tests.test.js"
	},
	"dependencies": {
		"@benev/argv": "^0.3.14",
		"@e280/sten": "^0.1.1",
		"@e280/stz": "^0.2.21",
		"braces": "^3.0.3",
		"chokidar": "^5.0.0",
		"esbuild": "^0.27.3",
		"globby": "^16.1.1",
		"minimatch": "^10.2.4",
		"shell-quote": "^1.8.3",
		"zx": "^8.8.5"
	},
	"devDependencies": {
		"@e280/science": "^0.1.8",
		"@types/braces": "^3.0.5",
		"@types/node": "^25.3.2",
		"@types/shell-quote": "^1.7.5",
		"http-server": "^14.1.1",
		"typescript": "^5.9.3"
	},
	"keywords": [
		"static site generator",
		"ssg"
	],
	"homepage": "https://github.com/e280/scute#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/e280/scute.git"
	},
	"bugs": {
		"url": "https://github.com/e280/scute/issues"
	}
}
